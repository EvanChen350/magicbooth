{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitReturns": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app": ["src/app/*"],
      "@/assets/*": ["src/assets/*"],
      "@/components/*": ["src/components/*"],
      "@/consts/*": ["src/consts/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/lib/*": ["src/lib/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "src/components/cui/Carousel/Backup-EmblaCarousel.tsx.temp" //"src/app/api/submit/route.ts"
  ],
  "exclude": ["node_modules"]
}
